---
import Banner from "../components/blocks/Banner.astro";
import TeamCard from "../components/blocks/TeamCard.astro";
import MainLayout from "../layouts/MainLayout.astro";
import banner1 from "../assets/banners/banner1.png";
import Suzanne from "../assets/team/suzanne.jpg";
---

<MainLayout title="Home" showSidebar="true">
  <!-- Intro -->
  <section class="vertical">
    <!-- <Banner src={banner1} height="400px" position="top" /> -->
    <p><span class="highlight">Felis Major</span> is an independent video game studio currently developing two small games:<span
        class="highlight"></p> 
      <p><a href="/gloopalaxy">🪐 Gloopalaxy</a>, a <span class="highlight">management game</span> where you run your own space aquarium.</p>
      <p><a href="/seaside-supper">🦐 Seaside Supper</a>, a <span class="highlight">visual novel</span>  where you serve dishes to uncover the stories of the locals in a small coastal town.</p>

      <br>
    <p class="note center">
      Felis Major: from Latin, “greater (or larger) cat" 🐈‍⬛
  
  </section>

  <!-- Team -->
  <section class="horizontal flex-center">
    <TeamCard
      name="Suzanne Clemente"
      title="Game & Narrative Designer / Writer"
      pronouns="she/they"
      portrait={Suzanne}
      link="https://micocool.quest/links"
      linkName="micocool.quest"
    />

    <TeamCard
      name="Robert Edilber"
      title="Programmer / 3D Artist / Sound Designer"
      pronouns="he/him"
      portrait="https://placehold.co/200x250"
      link="https://ttfbx.dev/"
      linkName="ttfbx.dev"
    />
  </section>
</MainLayout>
